# Используем Node.js для запуска приложения
FROM node:20-alpine

# Устанавливаем pnpm глобально
RUN npm install -g pnpm

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /frontend

# Копируем файл package.json и package-lock.json для установки зависимостей
COPY package*.json ./

# Устанавливаем зависимости
RUN pnpm install

# Копируем локальные файлы проекта в контейнер (в dev режиме они будут монтироваться)
COPY . .

# Открываем порт для сервера разработки
EXPOSE 3000

# Запускаем сервер разработки
CMD ["pnpm", "start"]
